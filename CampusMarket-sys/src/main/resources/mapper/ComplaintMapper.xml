<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mapper.ComplaintMapper">
    <insert id="insertComplaint" parameterType="cn.pojo.entity.Complaint">
        INSERT INTO complaint (complainant_id, target_id, order_id, content, status, create_time, product_id)
        VALUES (#{complainantId}, #{targetId}, #{orderId}, #{content}, #{status}, NOW(), #{productId})
    </insert>
    <select id="selectByComplainantId" resultType="cn.pojo.entity.Complaint">
        SELECT * FROM complaint WHERE complainant_id = #{complainantId} ORDER BY create_time DESC
    </select>
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM complaint ORDER BY create_time DESC
    </select>
    <update id="updateStatus">
        UPDATE complaint SET status=#{status}, handle_time=#{handleTime} WHERE id=#{id}
    </update>

    <resultMap id="BaseResultMap" type="cn.pojo.entity.Complaint">
        <id column="id" property="id"/>
        <result column="complainant_id" property="complainantId"/>
        <result column="target_id" property="targetId"/>
        <result column="order_id" property="orderId"/>
        <result column="product_id" property="productId"/>
        <result column="content" property="content"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="handle_time" property="handleTime"/>
    </resultMap>
</mapper>
