<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mapper.MessageMapper">

    <!-- 基础字段映射 -->
    <resultMap id="BaseResultMap" type="cn.pojo.vo.MessageVO">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="user_avatar" property="userAvatar"/>
        <result column="user_account" property="userAccount"/>
        <result column="content" property="content"/>
        <result column="is_read" property="isRead"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 新增消息 -->
    <insert id="save">
        INSERT INTO message (
            user_id,
            content,
            is_read,
            create_time
        ) VALUES (
                     #{userId},
                     #{content},
                     #{isRead},
                     #{createTime}
                 )
    </insert>

    <!-- 标记用户消息为已读 -->
    <update id="setRead">
        UPDATE message
        SET is_read = true
        WHERE user_id = #{userId}
    </update>

    <!-- 批量删除消息 -->
    <delete id="batchDelete">
        DELETE FROM message
        WHERE id IN
        <foreach collection="ids" item="id"
                 open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 分页查询消息（带用户信息） -->
    <select id="query" resultMap="BaseResultMap">
        SELECT
        m.*,
        u.user_name,
        u.user_avatar,
        u.user_account
        FROM message m
        LEFT JOIN user u ON u.id = m.user_id
        <where>
            <if test="userId != null">AND m.user_id = #{userId}</if>
            <if test="content != null and content != ''">
                AND m.content LIKE concat('%', #{content}, '%')
            </if>
            <if test="startTime != null and endTime != null">
                AND m.create_time BETWEEN #{startTime} AND #{endTime}
            </if>
        </where>
        ORDER BY m.id DESC
        <if test="current != null and size != null">
            LIMIT #{current}, #{size}
        </if>
    </select>

    <!-- 查询满足条件的消息总数 -->
    <select id="queryCount" resultType="int">
        SELECT COUNT(*)
        FROM message m
        <where>
            <if test="userId != null">AND m.user_id = #{userId}</if>
            <if test="content != null and content != ''">
                AND m.content LIKE concat('%', #{content}, '%')
            </if>
            <if test="startTime != null and endTime != null">
                AND m.create_time BETWEEN #{startTime} AND #{endTime}
            </if>
        </where>
    </select>

</mapper>